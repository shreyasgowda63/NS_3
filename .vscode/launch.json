{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch from scratch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/scratch/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "externalConsole": false,
            "MIMode": "gdb",
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "./build/lib/"
                }
            ],
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "windows": {
                "pipeTransport": {
                    "debuggerPath": "/usr/bin/gdb",
                    "pipeProgram": "${env:windir}\\sysnative\\bash.exe",
                    "pipeArgs": ["-c"],
                    "pipeCwd": ""
                },
                "sourceFileMap": {
                    "/mnt/c": "C:\\",
                    "/mnt/d": "D:\\"
                },
                "setupCommands": [
                    {
                        "description": "Additional libs for gdb",
                        "text": "set env LD_LIBRARY_PATH ./build/lib"
                    }
                ]
            }
        }
    ]
}