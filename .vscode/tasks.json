{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "./waf build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run tests",
            "type": "shell",
            "command": "./test.py",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ],
    "windows": {
        "options": {
            "shell": {
                "executable": "${env:windir}\\system32\\bash.exe",
                "args": ["-c"]
            },
            "cwd": "${workspaceFolder}"
        },
    }
}