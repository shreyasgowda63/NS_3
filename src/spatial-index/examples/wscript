# -*- Mode: python; py-indent-offset: 4; indent-tabs-mode: nil; coding: utf-8; -*-

def build(bld):
    if not bld.env['ENABLE_EXAMPLES']:
        return;

    obj = bld.create_ns3_program('clipping-example', ['spatial-index', 'network', 'propagation', 'wifi', 'internet', 'applications'])
    obj.source = 'clipping-example.cc'

    obj = bld.create_ns3_program('mobile-clipping', ['spatial-index', 'network', 'propagation', 'wifi', 'internet', 'applications'])
    obj.source = 'mobile-clipping.cc'
